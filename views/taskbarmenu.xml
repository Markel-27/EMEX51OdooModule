<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="emex51_module.list">
      <field name="name">EMEX51Module list</field>
      <field name="model">emex51_module.emex51_module</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="emex51_module.action_window">
      <field name="name">EMEX51Module window</field>
      <field name="res_model">emex51_module.emex51_module</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="emex51_module.action_server">
      <field name="name">EMEX51Module server</field>
      <field name="model_id" ref="model_emex51_module_emex51_module"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    
    <!-- Top menu item -->

    <menuitem name="EMEX51Module" id="emex51_module.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="emex51_module.menu_1" parent="emex51_module.menu_root"/>
    <menuitem name="Menu 2" id="emex51_module.menu_2" parent="emex51_module.menu_root"/>
  
    <!-- actions -->
    
    <menuitem name="List" id="emex51_module.menu_1_list" parent="emex51_module.menu_1"
              action="emex51_module.action_window"/>
    <menuitem name="Server to list" id="emex51_module" parent="emex51_module.menu_2"
              action="emex51_module.action_server"/>
    
  </data>
</odoo>